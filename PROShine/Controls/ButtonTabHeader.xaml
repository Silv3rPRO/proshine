<UserControl x:Class="PROShine.Controls.ButtonTabHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:PROShine.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#FF2c2f33">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Label Name="TabName" FontSize="13.333" Grid.Column="0" Padding="2" Background="#FF2c2f33"
               Foreground="#FF99aab5" />
        <Button Content="X" Name="ButtonClose"
                FontWeight="Bold" FontSize="11" Width="15" ToolTip="Close" Grid.Column="1" Click="ButtonClose_Click" />
    </Grid>
</UserControl>