                                                        <TextBlock Text="{Binding Stats.SpDefence}" Canvas.Top="81"
                                                                   Canvas.Right="52" FontSize="15" Foreground="White" />
                                                        <TextBlock Text="{Binding Stats.Health}" Canvas.Top="101"
                                                                   Canvas.Right="52" FontSize="15" Foreground="White" />

                                                        <TextBlock Text="{Binding IV.Attack}" Canvas.Right="33"
                                                                   FontSize="15" Foreground="#D48600" />
                                                        <TextBlock Text="{Binding IV.Defence}" Canvas.Top="21"
                                                                   Canvas.Right="33" FontSize="15" Foreground="#D48600" />
                                                        <TextBlock Text="{Binding IV.Speed}" Canvas.Top="41"
                                                                   Canvas.Right="33" FontSize="15" Foreground="#D48600" />
                                                        <TextBlock Text="{Binding IV.SpAttack}" Canvas.Top="61"
                                                                   Canvas.Right="33" FontSize="15" Foreground="#D48600" />
                                                        <TextBlock Text="{Binding IV.SpDefence}" Canvas.Top="81"
                                                                   Canvas.Right="33" FontSize="15" Foreground="#D48600" />
