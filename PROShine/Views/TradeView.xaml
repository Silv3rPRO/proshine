                        <TextBlock Name="FirstMoney" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" />
                        <TextBlock Name="SecondMoney" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" />

                        <DockPanel Name="TeamToTrade" Grid.Row="3" Grid.ColumnSpan="2" />
                        <Grid Name="FinalView" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="Accept" Click="acceptOnTrade_Click" Margin="0,0,5,0" />
                            <Button Grid.Column="1" Content="Cancel" Click="cancelOnTrade_Click" Margin="5,0,0,0" />
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1" Margin="5" Name="TradeControls">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="Cancel" MinWidth="60" Margin="0,0,5,0"
                                Click="cancelOnTrade_Click" />
                        <TextBox Grid.Column="1" Name="Money" MinWidth="100" Margin="5,0,5,0" />
                        <Button Grid.Column="2" Content="Set" MinWidth="40" Margin="5,0,5,0"
                                Click="setTradeInfos_Click" />
                        <Button Grid.Column="3" Content="Accept" MinWidth="75" Margin="5,0,0,0"
                                Click="acceptOnTrade_Click" />
                    </Grid>
                </Grid>

                <StackPanel Name="WaitingTrade">
                    <iconPacks:PackIconMaterial Kind="Share" VerticalAlignment="Center" Spin="True" />
                    <TextBlock Text="Waiting on a trade request.." HorizontalAlignment="Center" />
                    <TextBlock Text="You can type '/trade &lt;name>' in the chat to start one yourself." />
                </StackPanel>
                <StackPanel Name="OnRequest" HorizontalAlignment="Center">
                    <DockPanel>
                        <TextBlock Name="TradeApplicant" />
                        <TextBlock Text=" wants to trade with you. Do you accept ?" />
                    </DockPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="Accept" Click="AcceptTrade_Click" Margin="0,0,5,0" />
                        <Button Grid.Column="1" Content="Cancel" Click="Cancel_Click" Margin="5,0,0,0" />
