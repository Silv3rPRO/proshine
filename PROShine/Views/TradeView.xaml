                                                                   FontSize="15" Foreground="#00D4D4" />
                                                        <TextBlock Text="{Binding EV.Defence}" Canvas.Top="21"
                                                                   Canvas.Right="6" FontSize="15" Foreground="#00D4D4" />
                                                        <TextBlock Text="{Binding EV.Speed}" Canvas.Top="41"
                                                                   Canvas.Right="6" FontSize="15" Foreground="#00D4D4" />
                                                        <TextBlock Text="{Binding EV.SpAttack}" Canvas.Top="61"
                                                                   Canvas.Right="6" FontSize="15" Foreground="#00D4D4" />
                                                        <TextBlock Text="{Binding EV.SpDefence}" Canvas.Top="81"
                                                                   Canvas.Right="6" FontSize="15" Foreground="#00D4D4" />
                                                        <TextBlock Text="{Binding EV.Health}" Canvas.Top="101"
                                                                   Canvas.Right="6" FontSize="15" Foreground="#00D4D4" />
                                                    </Canvas>
                                                </Canvas>
                                            </Canvas>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn>
                                        <GridViewColumn.DisplayMemberBinding>
                                            <MultiBinding StringFormat="{}{0} Lv.{1}">
                                                <Binding Path="Name" />
                                                <Binding Path="Experience.CurrentLevel" />
                                            </MultiBinding>
                                        </GridViewColumn.DisplayMemberBinding>
                                    </GridViewColumn>

                                    <!--<GridViewColumn Header="Item" DisplayMemberBinding="{Binding ItemHeld}" />-->
                                </GridView>
                            </ListView.View>
                        </ListView>

