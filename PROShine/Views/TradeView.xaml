                                                        <TextBlock Text="{Binding Moves[1].Name}" Canvas.Top="20"
                                                                   Canvas.Left="3" FontSize="15" Foreground="White" />
                                                        <TextBlock Text="{Binding Moves[2].Name}" Canvas.Top="40"
                                                                   Canvas.Left="3" FontSize="15" Foreground="White" />
